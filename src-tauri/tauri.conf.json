{
	"$schema": "https://schema.tauri.app/config/2",
	"productName": "patinaje",
	"version": "0.1.0",
	"identifier": "com.patinaje.app",
	"build": {
		"beforeDevCommand": "bun run dev",
		"devUrl": "http://localhost:1420",
		"beforeBuildCommand": "bun run build",
		"frontendDist": "../dist"
	},
	"app": {
		"windows": [
			{
				"title": "patinaje",
				"width": 800,
				"height": 600
			}
		],
		"security": {
			"csp": null
		}
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		],
		"resources": ["resources/*.mp3"]
	},
	"plugins": {
		"allowlist": {
			"fs": {
				"scope": ["$RESOURCE/*"],
				"all": true
			},
			"path": {
				"all": true
			},
			"protocol": {
				"asset": true,
				"assetScope": ["**"]
			}
		}
	}
}
